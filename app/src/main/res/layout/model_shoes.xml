<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/idImgM"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/tenis1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/idTituloM"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:text="Tênis Nike Air Force"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:textColor="#FF027BD8"
            android:id="@+id/idPrecoM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="R$ 899,99"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/idDescM"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Com uma estética envelhecida e cores clássicas, o original do basquete ganha uma transformação vintage."
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RatingBar
                style="@style/Widget.AppCompat.RatingBar.Indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:numStars="1" />

            <TextView
                android:id="@+id/idStarM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="1dp"
                android:text="4.5"
                android:textSize="15sp" />


            <ImageView
                android:id="@+id/idFav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="13dp"
                android:src="@drawable/ic_baseline_favorite" />

            <Button
                android:id="@+id/btnComprar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comprar"
                android:textSize="10sp"
                android:layout_marginLeft="9dp"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>