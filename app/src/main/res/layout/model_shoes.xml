<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/idImg"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/tenis1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/idTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Tênis Nike Air Force"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/idPreco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="R$ 899,99"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/idDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Com uma estética envelhecida e cores clássicas, o original do basquete ganha uma transformação vintage."
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:numStars="1" />

            <TextView
                android:id="@+id/idStar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:text="4.5"
                android:textSize="15sp" />


            <ImageView
                android:id="@+id/idFav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/ic_baseline_favorite" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>